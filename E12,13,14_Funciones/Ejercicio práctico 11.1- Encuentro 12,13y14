Funcion ok <- esImpar ( n )
	definir ok Como Logico
	definir digito Como Real
	digito = n
	ok = verdadero
	
	Mientras n > 0
		
		digito = n MOD 10
		
		Si digito % 2 == 0 Entonces
			ok = falso
		FinSi
		
		n = trunc(n / 10)
		
	FinMientras
	
Fin Funcion


Algoritmo guia4_11
	Definir _numero como entero
	Definir impar Como Logico
	
	Escribir "Ingrese un número:"
	Leer _numero
	
	impar = esImpar(_numero)
	
	Si impar Entonces
		Escribir "Todos los dígitos son impares."
	SiNo
		Escribir "Al menos un dígito no es impar."	
	FinSi
	
FinAlgoritmo